<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Poppins', sans-serif; }
    </style>
    <title>My Connections</title>
</head>
<body class="bg-gray-900 text-white min-h-screen">
    
    <nav class="bg-gray-800 p-4 shadow-lg">
        <div class="container mx-auto flex justify-between items-center">
            <a href="/" class="text-xl font-bold text-white">Alumni Connect</a>
            <ul class="flex space-x-4 text-sm font-semibold">
                <li><a href="/search" class="hover:text-sky-300">Alumni Directory</a></li>
                <li><a href="/profile" class="hover:text-sky-300">Profile</a></li>
                <li><a href="/events" class="hover:text-sky-300">Events</a></li>
                <li><a href="/connections" class="hover:text-sky-300">Connections</a></li>
                <li><a href="/messages" class="hover:text-sky-300">Messages</a></li>
                <li><a href="/contact" class="hover:text-sky-300">Contact Us</a></li>
                <li><a href="/logout" class="hover:text-sky-300">Logout</a></li>
            </ul>
        </div>
    </nav>
    
    <div class="container mx-auto p-8">
        <h1 class="text-3xl font-bold mb-6">My Connections</h1>
        <div id="connections-list" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            </div>
        <div id="no-connections" class="text-center mt-12 hidden">
            <p class="text-gray-400">You have no connections yet. Find alumni to message in the directory!</p>
        </div>
    </div>

    <script>
        const connectionsList = document.getElementById('connections-list');
        const noConnectionsMessage = document.getElementById('no-connections');

        async function fetchConnections() {
            try {
                const response = await fetch('/api/connections');
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                const user = await response.json();
                const connections = user.connections;
                
                connectionsList.innerHTML = '';
                if (connections && connections.length > 0) {
                    noConnectionsMessage.classList.add('hidden');
                    connections.forEach(connection => {
                        const connectionCard = `
                            <div class="bg-gray-800 p-6 rounded-lg shadow-lg flex items-center justify-between">
                                <h3 class="text-xl font-semibold text-white">${connection.name}</h3>
                                <a href="/messages/${connection._id}" class="bg-purple-600 text-white px-4 py-2 rounded-md hover:bg-purple-700 transition-colors duration-200">
                                    Message
                                </a>
                            </div>
                        `;
                        connectionsList.innerHTML += connectionCard;
                    });
                } else {
                    noConnectionsMessage.classList.remove('hidden');
                }
            } catch (error) {
                console.error('Error fetching connections:', error);
                noConnectionsMessage.classList.remove('hidden');
            }
        }

        document.addEventListener('DOMContentLoaded', fetchConnections);
    </script>
</body>
</html>