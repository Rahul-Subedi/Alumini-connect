<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <style>
        body { font-family: 'Poppins', sans-serif; }
        html { background-color: #0f172a; }
        .thread-card { transition: background-color 0.3s ease, transform 0.3s ease; }
        .thread-card:hover { background-color: #334155; transform: scale(1.02); }
    </style>
    <title>Messages - Alumni Connect</title>
</head>
<body class="bg-slate-900 text-white min-h-screen">
    <%- include('partials/navbar') %>
     
    <div class="container mx-auto p-8">
        <header class="mb-8">
            <h1 class="text-4xl font-bold">Message Threads</h1>
            <p class="text-slate-400 mt-1">Your conversations with other members.</p>
        </header>

        <div id="threads-list" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            </div>

        <div id="no-messages" class="text-center mt-20 hidden">
            <i class="fas fa-comments fa-4x text-slate-600 mb-4"></i>
            <h3 class="text-2xl font-semibold text-slate-300">No Conversations Yet</h3>
            <p class="text-slate-400 mt-2">Start a conversation from the alumni directory to see it here.</p>
        </div>
    </div>

    <script>
        const threadsList = document.getElementById('threads-list');
        const noMessagesMessage = document.getElementById('no-messages');

        async function fetchMessageThreads() {
            try {
                const response = await fetch('/api/messages/threads');
                if (!response.ok) {
                    throw new Error('Failed to fetch message threads');
                }
                const threads = await response.json();
                threadsList.innerHTML = '';
                if (threads.length === 0) {
                    noMessagesMessage.classList.remove('hidden');
                } else {
                    noMessagesMessage.classList.add('hidden');
                    threads.forEach(thread => {
                        const threadCard = `
                            <a href="/messages/${thread.partnerId}" class="thread-card block bg-slate-800 p-6 rounded-lg shadow-lg border border-slate-700">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center gap-4">
                                        <img class="w-12 h-12 rounded-full object-cover" src="${thread.partnerProfilePic || `https://ui-avatars.com/api/?name=${encodeURIComponent(thread.partnerName)}&background=1e40af&color=fff`}" alt="${thread.partnerName}" />
                                        <h3 class="text-xl font-semibold text-white">${thread.partnerName}</h3>
                                    </div>
                                    <i class="fas fa-chevron-right text-slate-500"></i>
                                </div>
                            </a>
                        `;
                        threadsList.innerHTML += threadCard;
                    });
                }
            } catch (error) {
                console.error('Error fetching message threads:', error);
                noMessagesMessage.classList.remove('hidden');
            }
        }

        document.addEventListener('DOMContentLoaded', fetchMessageThreads);
    </script>
</body>
</html>