<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alumni Connect - A Network of Excellence</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        html, body {
            overscroll-behavior-y: none;
        }
        html {
            background-color: #f1f5f9; /* This matches your page's bg-slate-100 */
        }
        body { font-family: 'Poppins', sans-serif; }
        .hero-bg {
            background: linear-gradient(rgba(15, 23, 42, 0.85), rgba(15, 23, 42, 0.85)), url('https://images.unsplash.com/photo-1523050854058-8df90110c9f1?q=80&w=2070&auto-format&fit=crop');
            background-size: cover;
            background-position: center;
        }
        /* Animation for elements fading in */
        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .fade-in-up { animation: fadeInUp 0.8s ease-out forwards; }
        .feature-card {
            opacity: 0; /* Initially hidden for staggered animation */
            transition: transform 0.3s ease-out, box-shadow 0.3s ease-out;
        }
        .feature-card:hover { transform: translateY(-10px); box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1); }
    </style>
</head>
<body class="bg-slate-50">

    <%- include('partials/navbar') %>

    <main>
        <section class="hero-bg text-white">
            <div class="container mx-auto px-6 py-32 md:py-40 text-center">
                <h1 class="text-4xl md:text-6xl font-extrabold leading-tight mb-4 fade-in-up" style="animation-delay: 0.2s;">Connecting Excellence Across Premier Institutes</h1>
                <p class="text-lg md:text-xl text-slate-300 max-w-3xl mx-auto mb-8 fade-in-up" style="animation-delay: 0.4s;">
                    An exclusive network for verified students and alumni from India's top engineering colleges.
                </p>
                <a href="/search" class="bg-white text-slate-900 font-bold py-3 px-8 rounded-full text-lg hover:bg-slate-200 transition-transform transform hover:scale-105 shadow-2xl fade-in-up" style="animation-delay: 0.6s;">
                    Explore the Directory
                </a>
            </div>
        </section>

        <section class="bg-white py-20">
            <div class="container mx-auto px-6 text-center">
                <h2 class="text-4xl font-bold text-slate-800 mb-12">A Unified Professional Network</h2>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
                    <div class="feature-card bg-slate-50 p-8 rounded-xl shadow-lg border border-slate-200">
                        <div class="bg-sky-100 text-sky-600 rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-6"><i class="fas fa-search text-3xl"></i></div>
                        <h3 class="text-2xl font-semibold text-slate-800 mb-2">Cross-Institute Directory</h3>
                        <p class="text-slate-500">Find and connect with verified peers. Filter by institute, batch, company, and more.</p>
                    </div>
                    <div class="feature-card bg-slate-50 p-8 rounded-xl shadow-lg border border-slate-200">
                        <div class="bg-sky-100 text-sky-600 rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-6"><i class="fas fa-shield-alt text-3xl"></i></div>
                        <h3 class="text-2xl font-semibold text-slate-800 mb-2">Verified Members Only</h3>
                        <p class="text-slate-500">Every member is verified using their official institute email or documents, ensuring an authentic network.</p>
                    </div>
                    <div class="feature-card bg-slate-50 p-8 rounded-xl shadow-lg border border-slate-200">
                        <div class="bg-sky-100 text-sky-600 rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-6"><i class="fas fa-hand-holding-heart text-3xl"></i></div>
                        <h3 class="text-2xl font-semibold text-slate-800 mb-2">Give Back</h3>
                        <p class="text-slate-500">Support your alma mater through crowdfunding initiatives for academic, social, and development projects.</p>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer class="bg-slate-800 text-white py-8">
        <div class="container mx-auto px-6 text-center text-slate-400">
            <p>&copy; 2025 Alumni Connect. A platform for India's premier institutes.</p>
        </div>
    </footer>

    <script>
        const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry, index) => {
                if (entry.isIntersecting) {
                    // Stagger the animation for each card
                    entry.target.style.animation = `fadeInUp 0.5s ${index * 0.2}s ease-out forwards`;
                    observer.unobserve(entry.target); // Animate only once
                }
            });
        }, { threshold: 0.1 });
        document.querySelectorAll('.feature-card').forEach(el => {
            observer.observe(el);
        });
    </script>
</body>
</html>