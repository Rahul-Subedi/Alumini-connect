<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alumni & Student Connect</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f1f5f9;
        }
        .form-container {
            background-color: #ffffff;
            border-radius: 1rem;
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            padding: 2.5rem;
            max-width: 550px;
            width: 95%;
            margin: 4rem auto;
            transition: max-width 0.5s ease-in-out;
        }
        .form-container.register-mode {
            max-width: 900px;
        }
        .form-input {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #cbd5e1;
            border-radius: 0.5rem;
            font-size: 1rem;
            transition: border-color 0.3s, box-shadow 0.3s;
        }
        .form-input:focus {
            outline: none;
            border-color: #4f46e5;
            box-shadow: 0 0 0 2px rgba(79, 70, 229, 0.25);
        }
        .btn-primary {
            width: 100%;
            padding: 0.75rem 1.5rem;
            background-color: #4f46e5;
            color: #fff;
            border: none;
            border-radius: 0.5rem;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        .btn-primary:hover {
            background-color: #4338ca;
        }
    </style>
</head>
<body class="flex items-center justify-center min-h-screen">
    <div id="auth-container" class="form-container">
        <h2 id="form-title" class="text-3xl font-bold text-center mb-6 text-gray-800">Welcome Back</h2>

        <% if (typeof error !== "undefined" && error) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-md mb-4 text-center">
                <%= error %>
            </div>
        <% } %>

        <form id="login-form" action="/auth/login" method="POST" class="space-y-6">
            <div>
                <label for="login-email" class="block text-sm font-medium text-gray-700">Email Address</label>
                <input type="email" id="login-email" name="email" required class="mt-1 block w-full form-input">
            </div>
            <div>
                <label for="login-password" class="block text-sm font-medium text-gray-700">Password</label>
                <input type="password" id="login-password" name="password" required class="mt-1 block w-full form-input">
            </div>
            <button type="submit" class="btn-primary">
                Log In
            </button>
        </form>

        <form id="register-form" action="/auth/register" method="POST" class="space-y-6 hidden">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label for="register-name" class="block text-sm font-medium text-gray-700">Full Name</label>
                    <input type="text" id="register-name" name="name" required class="mt-1 block w-full form-input">
                </div>
                <div>
                    <label for="register-email" class="block text-sm font-medium text-gray-700">Institute Email</label>
                    <input type="email" id="register-email" name="email" placeholder="e.g., name@iitb.ac.in" required class="mt-1 block w-full form-input">
                </div>
                <div>
                    <label for="register-password" class="block text-sm font-medium text-gray-700">Password</label>
                    <input type="password" id="register-password" name="password" required class="mt-1 block w-full form-input">
                </div>
                 <div>
                    <label for="register-contact" class="block text-sm font-medium text-gray-700">Contact No.</label>
                    <input type="text" id="register-contact" name="contact" required class="mt-1 block w-full form-input">
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div>
                    <label for="register-institute" class="block text-sm font-medium text-gray-700">Institute</label>
                    <select id="register-institute" name="institute" required class="mt-1 block w-full form-input">
                        <option value="" disabled selected>Select your institute</option>
                        <option value="IIT Bombay">IIT Bombay</option>
                        <option value="IIT Delhi">IIT Delhi</option>
                        <option value="NIT Durgapur">NIT Durgapur</option>
                        <option value="NIT Trichy">NIT Trichy</option>
                    </select>
                </div>
                <div>
                    <label for="register-batch" class="block text-sm font-medium text-gray-700">Batch/Year</label>
                    <input type="text" id="register-batch" name="batch" placeholder="e.g. 2022" required class="mt-1 block w-full form-input">
                </div>
                <div>
                    <label for="register-branch" class="block text-sm font-medium text-gray-700">Branch</label>
                    <input type="text" id="register-branch" name="branch" required class="mt-1 block w-full form-input">
                </div>
            </div>

            <div class="space-y-2">
                <label class="block text-sm font-medium text-gray-700">Are you an Alumni or Student?</label>
                <div class="flex space-x-4">
                    <div class="flex items-center">
                        <input type="radio" id="role-alumni" name="role" value="alumni" class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300" checked>
                        <label for="role-alumni" class="ml-2 text-gray-700">Alumni</label>
                    </div>
                    <div class="flex items-center">
                        <input type="radio" id="role-student" name="role" value="student" class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300">
                        <label for="role-student" class="ml-2 text-gray-700">Student</label>
                    </div>
                </div>
            </div>
            
            <button type="submit" class="btn-primary">
                Register & Send OTP
            </button>
            
            <div class="text-center text-sm mt-4">
                <a href="/register-document" class="font-medium text-indigo-600 hover:text-indigo-500">
                    Alumnus without an institute email? Register with a document.
                </a>
            </div>
        </form>
        
        <div class="mt-6 text-center text-sm">
            <span id="toggle-form-text" class="text-gray-600">Don't have an account?</span>
            <button id="toggle-form-btn" type="button" class="ml-1 font-semibold text-indigo-600 hover:text-indigo-500">Create an Account</button>
        </div>
    </div>
    <script>
        const authContainer = document.getElementById('auth-container');
        const loginForm = document.getElementById('login-form');
        const registerForm = document.getElementById('register-form');
        const toggleFormBtn = document.getElementById('toggle-form-btn');
        const toggleFormText = document.getElementById('toggle-form-text');
        const formTitle = document.getElementById('form-title');

        let isLogin = true;

        function toggleForm() {
            isLogin = !isLogin;
            if (!isLogin) {
                loginForm.classList.add('hidden');
                registerForm.classList.remove('hidden');
                formTitle.textContent = 'Create Your Account';
                toggleFormText.textContent = 'Already have an account?';
                toggleFormBtn.textContent = 'Log In';
                authContainer.classList.add('register-mode');
            } else {
                registerForm.classList.add('hidden');
                loginForm.classList.remove('hidden');
                formTitle.textContent = 'Welcome Back';
                toggleFormText.textContent = "Don't have an account?";
                toggleFormBtn.textContent = 'Create an Account';
                authContainer.classList.remove('register-mode');
            }
        }

        toggleFormBtn.addEventListener('click', toggleForm);
    </script>
</body>
</html>